%p.text-success= notice
%h1 Listing Products
%table.table.table-striped
  %thead
    %tr
      %th{ colspan: 3 }
  %tbody
    - unless @products[:ordinary].blank?
      - @products[:ordinary].each do |ordinary|
        = render partial: 'products', locals: { product: ordinary }
    - unless @products[:pro].blank? || current_user.nil?
      - @products[:pro].each do |pro|
        = render partial: 'products', locals: { product: pro }
- if !current_user.nil? && current_user.owner?
  = link_to 'New Product', new_user_product_path(current_user)
