%p.text-success= notice
%h1 Listing Users
%table.table
  %thead
    %tr
      %th{ colspan: 3 }
  %tbody
    - @users.each do |user|
      %tr
        %td
          = user.name
        %td
          = user.email
        %td
          %p= link_to 'Show', user
          %p= link_to 'Edit', edit_user_path(user)
          %p= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'New User', new_user_path
